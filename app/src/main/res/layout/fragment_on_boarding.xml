<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_onboarding"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="56dp"
        android:layout_marginBottom="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_human_one" />

    <TextView
        android:id="@+id/tv_upperText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:background="@color/semi_white"
        android:gravity="center"
        android:paddingVertical="4dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_onboarding"
        tools:text="Teesting tilte for on Boarding" />


    <TextView
        android:id="@+id/tv_lowerText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/semi_white"
        android:gravity="center"
        android:paddingVertical="4dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tv_upperText"
        tools:text="Teesting tilte for on Boarding" />

    <LinearLayout
        android:id="@+id/ll_marker_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="24dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_onboarding">

        <ImageView
            android:id="@+id/iv_first_circle"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginEnd="6dp"
            android:src="@drawable/ic_fill_circle" />

        <ImageView
            android:id="@+id/iv_second_circle"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginEnd="6dp"
            android:src="@drawable/ic_holo_circle" />
        />

        <ImageView
            android:id="@+id/iv_third_circle"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginEnd="6dp"
            android:src="@drawable/ic_holo_circle" />
        />
    </LinearLayout>

    <TextView
        android:id="@+id/btn_previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/side_margin"
        android:background="?attr/selectableItemBackground"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        android:text="Previous"
        android:textColor="@color/primary_blue"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_marker_container" />

    <TextView
        android:id="@+id/btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/side_margin"
        android:background="?attr/selectableItemBackground"
        android:paddingHorizontal="20dp"
        android:paddingVertical="4dp"
        android:text="Next"
        android:textColor="@color/primary_blue"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_marker_container" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_get_started"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/side_margin"
        android:background="@drawable/btn_get_started"
        android:paddingHorizontal="20dp"
        android:paddingVertical="4dp"
        android:text="Next"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_marker_container" />


</androidx.constraintlayout.widget.ConstraintLayout>