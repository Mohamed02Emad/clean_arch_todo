<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".presentation.fragmentHome.HomeFragment">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="To Do"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <com.michalsvec.singlerowcalendar.calendar.SingleRowCalendar
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            android:id="@+id/main_single_row_calendar"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:elevation="2dp"
            android:paddingVertical="4dp"
            android:paddingHorizontal="16dp"
            android:clipToPadding="true"
            app:deselection="false"
            app:longPress="false"
            app:multiSelection="false" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_todos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="4dp"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:padding="16dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@id/btn_add_new_todo"
        app:layout_constraintTop_toBottomOf="@id/main_single_row_calendar" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_add_new_todo"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/btn_add_note"
        android:elevation="4dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="8dp"
        android:text="What do you need to do?"
        android:textAllCaps="false"
        android:textColor="@color/primary_grey"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent" />

    <View
        android:id="@+id/semi_black_wall"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:alpha="0.4"
        android:elevation="4dp"
        android:visibility="gone"
        />
</androidx.constraintlayout.widget.ConstraintLayout>