<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Todo" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowSplashScreenBackground" tools:targetApi="s">@color/color_splash</item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="s">@drawable/app_icon</item>
        <item name="android:windowSplashScreenAnimationDuration" tools:targetApi="s">300</item>
    </style>

    <style name="Theme.Todo" parent="Base.Theme.Todo" />

    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="timePickerColors">
        <item name="android:textColorPrimary">@color/black</item> <!-- color for digits -->
        <item name="android:textColor">@color/black</item> <!-- color for colon -->
        <item name="android:colorControlNormal">@color/primary_grey</item> <!-- color for (horizontal) delimeters -->
    </style>

</resources>